<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id = "triangle" class = "com.sauravcodeblog.Triangle">
   	<constructor-arg ref="pointA"></constructor-arg>
   	
   	<constructor-arg>
   		<bean id="pointB" class="com.sauravcodeblog.Point">
   			<property name="x" value="10"/>
   			<property name="y" value="-10"/>
   		</bean>
   	</constructor-arg>
   	
   	<constructor-arg>
   		<bean id="pointC" class="com.sauravcodeblog.Point">
   			<property name="x" value="20"/>
   			<property name="y" value="-20"/>
   		</bean>
   	</constructor-arg>
   </bean>
   <bean id="pointA" class="com.sauravcodeblog.Point">
   	<property name="x" value="0"/>
   	<property name="y" value="0"/>
   </bean>
   
   <alias name="triangle" alias="myTriangleAlias"></alias>
</beans>